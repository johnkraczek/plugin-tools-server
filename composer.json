{
  "name": "ydtb/plugin-tools-server",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "description": "Plugin Tools Server allows you to track paid wordpress plugins and themes automatically in a git repository. ",
  "homepage": "https://yourdigitaltoolbox.com/",
  "authors": [
    {
      "name": "John Kraczek",
      "email": "info@yourdigitaltoolbox.com",
      "homepage": "https://github.com/johnkraczek"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/roots/clover/issues",
    "forum": "https://discourse.roots.io/"
  },
  "autoload": {
    "psr-4": {
      "PluginToolsServer\\": "src/"
    },
    "files": []
  },
  "autoload-dev": {
    "psr-4": {
      "PluginTools\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/bit3/git-php.git"
    },
    {
      "type": "git",
      "url": "https://github.com/WordPress/wordpress-develop/"
  }
  ],
  "require": {
    "php": "^8.0",
    "phpseclib/phpseclib": "^3.0",
    "symfony/process": "^6.3",
    "bit3/git-php": "dev-release/1.6.0"
  },
  "scripts": {
    "lint": "pint",
    "test": "echo 'The road to hell is paved with good intentions.'"
  },
  "require-dev": {
    "laravel/pint": "^1.2"
  }
}
